{
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue-3recommended"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
		"no-var-requires": [
			"none"
		]
    }
}
